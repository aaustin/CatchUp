<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
		android:id="@+id/cmdAddFacebook"
	    android:layout_width="wrap_content"
	    android:layout_height="55dp"
	    android:layout_marginTop="15dp"
	    android:layout_centerHorizontal="true"	    
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:background="@drawable/cmd_add_facebook" />
    
    <Button
		android:id="@+id/cmdAddContacts"
	    android:layout_width="wrap_content"
	    android:layout_height="55dp"
	    android:layout_marginTop="15dp"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/cmdAddFacebook"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:background="@drawable/cmd_add_contacts" />
    
    <Button
		android:id="@+id/cmdAddCustom"
	    android:layout_width="wrap_content"
	    android:layout_height="55dp"
	    android:layout_marginTop="15dp"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/cmdAddContacts"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:background="@drawable/cmd_add_custom" />   
    
    
</RelativeLayout>
