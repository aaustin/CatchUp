<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
		android:id="@+id/imgHeading1"
		android:layout_width="180dp" 
		android:layout_height="wrap_content"
		android:src="@drawable/spread_word_heading"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="5dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:contentDescription="@string/image_content" />
    
    <RelativeLayout
	    android:id="@+id/relativeLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/imgHeading1"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:background="@drawable/gray_dent" >
    
        <ImageView
			android:id="@+id/imgFacebook"
			android:layout_width="110dp" 
			android:layout_height="31dp"
			android:src="@drawable/share_facebook"
			android:layout_marginLeft="8dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:contentDescription="@string/image_content" />
        
        <Button
		    android:id="@+id/cmdShareFacebook"
		    android:layout_width="61dp"
		    android:layout_height="31dp"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="8dp"
		    android:background="@drawable/cmd_like" />           
        
        <ImageView
			android:id="@+id/imgDivider"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/gray_divider"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="3dp"
			android:layout_below="@+id/cmdShareFacebook"
			android:scaleType="fitCenter"
			android:layout_centerHorizontal="true"
			android:contentDescription="@string/image_content" />
        
        
       <ImageView
			android:id="@+id/imgTwitter"
			android:layout_width="90dp" 
			android:layout_height="31dp"
			android:src="@drawable/share_twitter"
			android:layout_marginLeft="8dp"
			android:layout_below="@+id/imgDivider"
			android:layout_alignParentLeft="true"
			android:contentDescription="@string/image_content" />
        
        <Button
		    android:id="@+id/cmdShareTwitter"
		    android:layout_width="61dp"
		    android:layout_height="31dp"
		    android:layout_below="@+id/imgDivider"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="8dp"
		    android:background="@drawable/cmd_follow" />  
        
    </RelativeLayout>
    
    <ImageView
		android:id="@+id/imgTeam"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:scaleType="fitEnd"
		android:layout_alignParentBottom="true"		
		android:src="@drawable/team_photo"
		android:layout_centerHorizontal="true"
		android:contentDescription="@string/image_content" />
    
    <ImageView
		android:id="@+id/imgHeading2"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:scaleType="fitCenter"
		android:src="@drawable/web_link_logo"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_marginBottom="-190dp"
		android:layout_above="@+id/imgTeam"
		android:layout_below="@+id/relativeLayout1"
		android:layout_centerHorizontal="true"
		android:contentDescription="@string/image_content" />
    
    <ImageView
		android:id="@+id/imgHeading3"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:scaleType="fitCenter"
		android:src="@drawable/comments_link_logo"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="-85dp"
		android:layout_above="@+id/imgHeading2"
		android:layout_centerHorizontal="true"
		android:contentDescription="@string/image_content" />
    
</RelativeLayout>
