<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
		android:id="@+id/imgHeading1"
		android:layout_width="150dp" 
		android:layout_height="wrap_content"
		android:src="@drawable/email_subject_header"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:contentDescription="@string/image_content" />
    
    <EditText
        android:id="@+id/txtEmailSubject"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgHeading1"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
	    android:inputType="text" 
        android:imeOptions="actionNext"
        android:background="@drawable/edit_text"
        android:textColor="#727e8e" />
    
    <ImageView
		android:id="@+id/imgHeading2"
		android:layout_width="150dp" 
		android:layout_height="wrap_content"
		android:src="@drawable/email_content_header"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:layout_below="@+id/txtEmailSubject"
		android:contentDescription="@string/image_content" />

    <EditText
        android:id="@+id/txtEmailContent"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/imgHeading2"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="@drawable/edit_text"
        android:textColor="#727e8e" >

    </EditText>

</RelativeLayout>